{
  "compilerOptions": {
    "outDir": "lib",
    "module": "esnext",
    "target": "es2015",
    "lib": ["dom", "es2015", "es2016", "es2017", "es6"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "./components",
    "baseUrl": "./components",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedParameters": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "designsystem": ["components/index.tsx"],
      "designsystem/es/*": ["components/*"]
    },
    "composite": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "skipLibCheck": true,
    "esModuleInterop": true, 
    "typeRoots": ["@types", "node_modules/@types", "./node_modules/@types"]
  },
  "include": ["components/**/*"],
  "exclude": ["node_modules", "build", "scripts"]
}
